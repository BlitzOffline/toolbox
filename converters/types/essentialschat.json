{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/EssentialsChatTypes",
  "definitions": {
    "EssentialsChatTypes": {
      "type": "object",
      "properties": {
        "config": {
          "$ref": "#/definitions/EssentialsChatConfig"
        },
        "language": {
          "type": "object",
          "properties": {
            "msgFormat": {
              "type": "string"
            }
          }
        }
      },
      "required": ["config", "language"]
    },
    "EssentialsChatConfig": {
      "type": "object",
      "properties": {
        "chat": {
          "type": "object",
          "properties": {
            "format": {
              "type": ["string", "null"]
            },
            "group-formats": {
              "anyOf": [
                {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      },
      "required": ["chat"]
    }
  }
}
